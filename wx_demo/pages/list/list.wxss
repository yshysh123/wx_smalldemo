.page{
  position: relative;
}
.lists{
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}
.lists_i{
  width: 100%;
  height: 200rpx;
  background: #eee;
  margin: 10rpx 0;
  display: flex;
  flex-direction: column;
}
.content{
  height: 110rpx;
  line-height: 110rpx;
  border-bottom: 1px solid #ff0000;
  padding: 0 20rpx;
}
.time{
  color: #2A2BFF;
  line-height: 90rpx;
  padding: 0 20rpx;
}
.add{
  height: 100rpx;
  width: 100rpx;
  position: absolute;
  right: 80rpx;
  bottom: 50rpx;
  border: 1px solid #000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add image{
  height: 50rpx;
  width: 50rpx;
}